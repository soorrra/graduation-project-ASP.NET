@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
}
<!-- A reference is required to the Google API -->
<script src='https://www.google.com/recaptcha/api.js' async defer></script>
<div class="container">

<div class="row justify-content-center">
    <div class="col-md-8">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Регистрация</h4>
            <div class="reg">
            <h4 class="text-decoration-underline">Контактные данные</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row mt-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.FirstName">Имя</label>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.LastName">Фамилия</label>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.PhoneNumber">Номер телефона</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Password">Пароль</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword">Повторите пароль</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.City" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.City">Город</label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.StreetAddress" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.StreetAddress">Улица</label>
                            <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6" style="display: none;">
                        <div class="form-floating">
                            <input asp-for="Input.PostalCode" class="form-control" autocomplete="username" aria-required="true" value="q1q1q1" />
                            <label asp-for="Input.PostalCode">Почтовый индекс</label>
                            <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            <div class="form-group row mt-3">
             
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="text-decoration-underline mt-3">Тип аккаунта</h4>
                <div>
                    <input asp-for="Input.UserType" type="radio" id="sitter" value="Sitter" />
                    <label for="sitter" style="margin-right:1em;">Петситтер</label>
                    <input asp-for="Input.UserType" type="radio" id="petParent" value="Customer" />
                    <label for="petParent">Хозяин питомца</label>
                </div>
            </div>

            <!-- This must be placed inside the form. -->
            <div class="g-recaptcha" data-sitekey='@ViewData["SiteKey"]'></div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg text-white mt-3" style="background:#91AC8E; box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.3);">
                Зарегистрироваться 
            </button>
            <hr/>
            <p class="mb-1 text-center">
                Уже есть аккаунт?
            </p>
            <div class="d-flex justify-content-center">
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"
                   class="text-white w-50 btn mb-3 mt-3" style="background:#91AC8E;
                            box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.3);">
                    Войти
                </a>
            </div>
                </div>
        </form>
    </div>

</div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



