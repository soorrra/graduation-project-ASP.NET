@model Petsitter.ViewModels.SitterProfileVM
@{
    ViewData["Title"] = "EditProfile";
}
<div class="container">

<h2 class="text-uppercase">Здравствуйте @Model.FirstName!</h2>
<h3 style="color:#91AC8E; font-size:1.4em;">Обновите Ваш профиль!</h3>

<div class="container-fluid editprofile-container">
    <hr />
    <div class="mt-3 mb-3 back-to-profile lead" style="font-size:large;">
        <a asp-action="Profile" class="back-link">
            <span class="arrow" style="color:#91AC8E;"></span>
            <span class="text text-lg-start mt-1">Назад</span>
        </a>
    </div>
<hr />
        <form asp-action="EditProfile" enctype="multipart/form-data">
        <div class="row justify-content-center">

            <div class="col-md-8">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId"/>
            <input type="hidden" asp-for="SitterId" />

            <input type="hidden" asp-for="UserType"/>
                <div class="mb-3">
                        <h3 class="font-monospace">Изображение профиля</h3>
                    <div class="form-group">
                        <div class="input-group">
                            <input asp-for="ProfileImage" class="form-control" type="file">
                        </div>
                        <span asp-validation-for="ProfileImage" class="text-danger"></span>
                    </div>
                </div>
                <div class="row justify-content-center">

            <div class="form-group">
                    <label asp-for="ProfileBio" class="control-label"></label>

                    <textarea asp-for="ProfileBio" rows="3" class="form-control" autocomplete="username" aria-required="true"></textarea>
                    <span asp-validation-for="ProfileBio" class="text-danger"></span>

                </div>
            </div>

                <div class="mb-3">
                    <h3 class="font-monospace">Контактные данные</h3>
                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label asp-for="FirstName" class="col-form-label lead">Имя</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="col-sm-6">
                            <label asp-for="LastName" class="col-form-label lead">Фамилия</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label asp-for="Email" class="col-form-label lead">Email</label>
                            <input asp-for="Email" class="form-control" readonly="readonly" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-sm-6">
                            <label asp-for="PhoneNumber" class="col-form-label lead">Номер телефона</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <h3 class="font-monospace"> </h3>

                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label asp-for="StreetAddress" class="form-label lead">Адрес</label>
                            <input asp-for="StreetAddress" class="form-control" />
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>

                        <div class="col-sm-6">
                            <label asp-for="City" class="form-label lead">Город</label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="col-sm-12">
                            <label asp-for="PostalCode" class="form-label lead"> </label>
                            <input asp-for="PostalCode" class="form-control" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                </div>

            <div class="col-md-4">
                        <div class="d-flex flex-column w-100">
                    <div class="form-group p-3">
                        <h6> Какой вид питомцев вы принимаете для оказания услуг?</h6>

                        <label for="SelectedPetTypes" class="control-label"></label>
                        @foreach (var petType in Model.PetTypesAvailable)
                        {
                            <input class="form-check-input" type="checkbox" name="SelectedPetTypes" value="@petType"
                               @(Model.SelectedPetTypes.Contains(petType) ? "checked" : "")>
                            <label class="form-check-label">@petType</label>
                        }
                    </div>
                    <h3 class="font-monospace">Service preferences</h3>
                    <div class="d-flex flex-column w-100">
                        <div class="form-group p-3">
                            <h6> Какой тип услуг вы предлагаете?</h6>

                            <label for="SelectedServiceTypes" class="control-label"></label>
                            @foreach (var serviceType in Model.ServiceTypesAvailable)
                            {
                                <input class="form-check-input" type="checkbox" name="SelectedServiceTypes" value="@serviceType"
                                @(Model.SelectedServiceTypes.Contains(serviceType) ? "checked" : "")>
                                <label class="form-check-label">@serviceType</label>
                            }
                        </div>


                    <div class="form-group p-3">
                        <label >Цена за день</label>
                    <input asp-for="RatePerPetPerDay" type="text" class="form-control" autocomplete="username" aria-required="true"  />
                    <span asp-validation-for="RatePerPetPerDay" class="text-danger"></span>
                </div>
                    </div>
                </div>
        </div>

                <div class="form-group mt-5">
                    <button class="save-btn rounded-3 lead">Сохранить</button>
                </div>
        </form>

</div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
