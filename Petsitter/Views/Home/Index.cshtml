        <div class="hireAProfessionalCleaner">
            <div class="medialocation">

                <img class="locationpic item-a" src="~/images/location.svg" alt="location picture">
                <div>
                    <h2 class="item-b">@Localizer["Local pet sitters near you"]</h2>
