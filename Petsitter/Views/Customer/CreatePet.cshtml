@model Petsitter.ViewModels.PetVM

@{

    ViewData["Title"] = "CreatePet";

}
<div class="container">

<div class="container-fluid createpet-container">
    <div class="row justify-content-center">
        <div class="col-md-8">
        <div class="mt-3 mb-3 back-to-profile lead" style="font-size:large;">
            <a asp-action="EditProfile" class="back-link">
                <span class="arrow" style="color:#6366F1;"></span>
                <span class="text text-lg-start mt-1" style="color:#6366F1;">Back to Edit Profile</span>
            </a>
        </div>
        <h1 class="text-center mb-4 title">Let's Add Your Pet!</h1>
            <form asp-action="CreatePet" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="PetId" />
                
                <label asp-for="PetType" class="text-center mb-2">What type of pet?</label>
                <div class="form-group mb-4 pet-type-group">
                    <label for="dog" class="radio-label">
                        <input asp-for="PetType" type="radio" value="Dog" id="dog" class="hidden-radio" />
                        <span class="radio-icon">
                            <i class="fas fa-dog fa-4x"></i>
                            <span class="radio-circle"></span>
                        </span>
                    </label>
                    <label for="cat" class="radio-label">
                        <input asp-for="PetType" type="radio" value="Cat" id="cat" class="hidden-radio" />
                        <span class="radio-icon">
                            <i class="fas fa-cat fa-4x"></i>
                            <span class="radio-circle"></span>
                        </span>
                    </label>
                </div>

                <div class="row profile-pic">
                    <div class="form-group mb-4">
                        <label asp-for="PetImage" class="control-label mb-2">Select your pet image!</label>
                        <input asp-for="PetImage" class="form-control" />
                        <span asp-validation-for="PetImage" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-4">
                    <div class="col-sm-6">
                        <label asp-for="Name" class="control-label mb-2">Pet Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="PetSize" class="control-label mb-2">Pet Size</label>
                        <select asp-for="PetSize" asp-items="@(new SelectList(Model.AvailableSizes))" class="form-control"></select>
                    </div>
                </div>

                <div class="form-group row mb-4">
                    <div class="col-sm-6">
                        <label asp-for="BirthYear" class="control-label mb-2">Birth Year</label>
                        <select asp-for="BirthYear" class="form-control">
                            <option value="">--Select Year--</option>
                            @for (int year = DateTime.Now.Year; year >= 2002; year--)
                            {
                                <option value="@year">@year</option>
                            }
                        </select>
                        <span asp-validation-for="BirthYear" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6 radio-group">
                        <label asp-for="Sex" class="control-label mb-2">Sex</label>
                        <div>
                            <input asp-for="Sex" type="radio" id="f" value="F" />
                            <label for="f">F</label>
                            <input asp-for="Sex" type="radio" id="m" value="M" />
                            <label for="m">M</label>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Instructions" class="control-label mb-2">Instructions</label>
                    <input asp-for="Instructions" class="form-control" />
                    <span asp-validation-for="Instructions" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button class="save-btn rounded-3 lead">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
